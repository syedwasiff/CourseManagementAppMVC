@model List<CourseApp.Models.Domain.Orders>
@{
    ViewData["Title"] = "Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <h2 class="content-header">Your Orders</h2>
    <div class="content">
        <table class="table table-hover" id="myTable">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Course Name</td>
                    <td>Course Description</td>
                    <td>Course Price</td>
                    <td>Order Date</td>
                    <td>Status</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var Order in Model)
                {
                    <tr>
                        <td>@Order.Id</td>
                        <td>@Order.CourseName</td>
                        <td>@Order.CourseDescription</td>
                        <td>@Order.CoursePrice</td>
                        <td>@Order.BuyingDate</td>
                        @if (Order.Status == "Confirm")
                        {
                            <td class="text-green">@Order.Status</td>
                        }
                        else
                        {
                            <td class="text-info">@Order.Status</td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script src="~/plugins/jQuery/jQuery-2.1.3.min.js"></script>
<script src="~/datatable/jquery.datatables.min.js"></script>
<link href="~/datatable/jquery.datatables.min.css" rel="stylesheet" />

<script type="text/javascript">
    $(document).ready(function () {
        $.noConflict();
        var table = $('#myTable').DataTable();
        // $('#AdminTable').DataTable();
    });
</script>


