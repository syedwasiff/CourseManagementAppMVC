@model List<CourseApp.Models.Domain.VMCourses>
@{
    ViewData["Title"] = "BuyCourses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <h2 class="content-header">All Courses</h2>

    <div class="content">


        <div class="list-group">
            @foreach (var course in Model)
            {
                <ul>
                    <li class="list-group-item list-group-item-action">
                        @course.CourseName :- @course.Description <span class="d-inline-flex"><a href="/BuyCourses/Cart/@course.Id" class="btn btn-primary">Buy At Rs. @course.CoursePrice</a></span>
                    </li>
                </ul>

            }
        </div>
    </div>
</div>


